import os.path
Import("env")
local_env=env.Clone()
local_env.Append(CPPDEFINES=("VOXDIR",(r'\"%s\"' % local_env.subst("$datadir/$package_name/voice"))))
local_env.Prepend(LIBS="RHVoice")
local_env.Prepend(LIBPATH=os.path.join("..","lib"))
program=local_env.Program("RHVoice",["main.c"])
local_env.InstallProgram(program)
