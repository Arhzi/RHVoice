import os.path
Import(["env"])
local_env=env.Clone()
synthDriver_dir=os.path.join(".","synthDrivers","RHVoice")
data_dir=os.path.join(synthDriver_dir,"data")
config_dir=os.path.join(synthDriver_dir,"config")
subst_dict={"@version@":"$package_version"}
sconstruct=local_env.Substfile("SConstruct.in",SUBST_DICT=subst_dict)
local_env.Depends(sconstruct,os.path.join(synthDriver_dir,"__init__.py"))
local_env.Depends(sconstruct,"installTasks.py")
manifest=local_env.Substfile("manifest.ini.in",SUBST_DICT=subst_dict)
local_env.Depends(manifest,os.path.join("locale","ru","manifest.ini"))
local_env.Install(synthDriver_dir,os.path.join("..","lib","RHVoice.dll"))
for subdir in ["languages","voices"]:
    local_env.InstallAs(os.path.join(data_dir,subdir),os.path.join("#data",subdir))
local_env.Install(config_dir,os.path.join("..","RHVoice.ini"))
local_env.Install(synthDriver_dir,os.path.join("..","COPYING.txt"))
