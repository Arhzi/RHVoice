import sys
import codecs
import rules

if __name__=="__main__":
	r=rules.rules(sys.argv[2])
	with codecs.open(sys.argv[1],"r","utf-8") as f_in:
		with codecs.open(sys.argv[3],"w","utf-8") as f_out:
			for line in f_in:
				entry=line.strip()
				if not entry:
					continue
				if u"Ñ‘" in entry:
					f_out.write(entry)
					f_out.write("\n")
				elif sum(1 for c in entry if c.isupper())==1:
					n=next(i for i in xrange(len(entry)) if entry[i].isupper())+1
					word="#"+entry.lower()+"#"
					m=r.match(word)
					if (len(m)!=1) or (m[0][0]+m[0][2]!=n):
						f_out.write(entry)
						f_out.write("\n")
				else:
					f_out.write(entry)
					f_out.write("\n")
