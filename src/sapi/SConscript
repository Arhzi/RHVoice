import os.path

Import(["env","sapi_env","BUILDDIR"])
if env.get("debug")=="yes":
    pdb=os.path.join("#"+BUILDDIR,"symbols.pdb")
else:
    pdb=None
dll_name="RHVoiceSvr"
dll_src=["dll.cpp","ClassFactoryImpl.cpp","SpTTSEngineImpl.cpp",
         "util.cpp","SpeakImpl.cpp","dll.def"]
sapi_env.SharedLibrary(dll_name,dll_src,PDB=pdb)
