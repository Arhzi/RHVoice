<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github.olga_yakovleva.rhvoice.android"
      android:sharedUserId="com.github.olga_yakovleva.rhvoice"
      android:sharedUserLabel="@string/app_name">
  <uses-permission
      android:name="android.permission.WRITE_EXTERNAL_STORAGE"
      android:maxSdkVersion="18"/>
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <application
    android:label="@string/app_name"
    android:icon="@drawable/ic_launcher">
    <service
        android:label="@string/app_name"
        android:name=".RHVoiceService">
      <intent-filter>
        <action android:name="android.intent.action.TTS_SERVICE"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
      <meta-data android:name="android.speech.tts" android:resource="@xml/tts_engine"/>
    </service>
    <activity
        android:name=".CheckTTSData"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoDisplay">
      <intent-filter>
        <action android:name="android.speech.tts.engine.CHECK_TTS_DATA"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
    <service
        android:name=".DataService">
    </service>
    <activity
        android:name=".SampleTextActivity"
        android:theme="@android:style/Theme.NoDisplay">
      <intent-filter>
        <action android:name="android.speech.tts.engine.GET_SAMPLE_TEXT"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".SettingsActivity"
        android:label="@string/settings"
        android:exported="true">
    </activity>
    <receiver
        android:name=".OnPackageReceiver">
      <intent-filter>
        <action android:name="android.intent.action.PACKAGE_ADDED"/>
        <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED"/>
      </intent-filter>
    </receiver>    
    <activity
        android:name=".MainActivity"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <action android:name="android.speech.tts.engine.INSTALL_TTS_DATA"/>
        <category android:name="android.intent.category.LAUNCHER"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
    <receiver
        android:name=".ConnectivityActionReceiver"
        android:enabled="false">
      <intent-filter>
        <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
      </intent-filter>
    </receiver>    
  </application>
</manifest>
