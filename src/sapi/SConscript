import os.path

Import(["env"])
local_env=env.Clone()
local_env.Prepend(LIBS=["RHVoice_core","comsuppw","advapi32","shell32"])
local_env.Prepend(LIBPATH=os.path.join("..","core"))

dll_name="RHVoiceSvr"
if env.get("debug")=="yes":
    local_env["PDB"]=File(dll_name+".pdb").abspath
    local_env["CCPDBFLAGS"]=["/Zi","/Fd"+File("symbols.pdb").abspath]
else:
    local_env["PDB"]=None
dll_src=["com.cpp",
         "ISpDataKeyImpl.cpp",
         "IEnumSpObjectTokensImpl.cpp",
         "ISpTTSEngineImpl.cpp",
         "main.cpp",
         "registry.cpp",
         "SpeakImpl.cpp",
         "tts_base.cpp",
         "voice_token.cpp",
         "dll.def"]
local_env.SharedLibrary(dll_name,dll_src)
